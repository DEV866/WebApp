@model WebApp.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplictaionUserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplictaionUserId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <h1>Shopping Cart</h1>
    <table>
        <tr>
            <th> </th>
            <th>Product ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    <a href="/products/Details/@Html.DisplayFor(modelItem => product.Id)" loading="lazy">
                        <img class="cart-item" src="@product.Path">
                    </a>
                </td>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                
                <td>
                    
                </td>
            </tr>
        }
    </table>
</div>


